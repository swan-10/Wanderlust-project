<script>
    document.getElementById('flexSwitchCheckDefault').addEventListener('change', function () {
        const checkbox = document.getElementById('flexSwitchCheckDefault');
        const originalPrices = document.querySelectorAll('.original-price');
        const taxPrices = document.querySelectorAll('.tax-price');

        if (checkbox.checked) {
            // If checkbox is checked, hide original prices and show tax-included prices
            originalPrices.forEach(price => price.style.display = 'none');
            taxPrices.forEach(price => price.style.display = 'inline');
        } else {
            // If checkbox is unchecked, show original prices and hide tax-included prices
            originalPrices.forEach(price => price.style.display = 'inline');
            taxPrices.forEach(price => price.style.display = 'none');
        }
    });
</script>